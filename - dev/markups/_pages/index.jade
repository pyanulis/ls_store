extends ../main

block title
	| Главная страница (main.psd)

block content
	article.content-wrapper
		.container
			.main__title
				| Мобильные телефоны
			.main__content

				include ../_common/_sidebar

				.content
					.sort
						.sort__left
							.sort__select-wrap
								.sort__title
									| Сортировать по
								.sort__select
									select.sort__select-elem
										- var options = ["по цене","по популярности"]
										each option in options
											option(value="")=option
						.sort__right
							.sort__title
								| Вид каталога
							.sort__view
								ul.sort_-view-list
									- var items = ["rows","grid","lines"]
									each item in items
										li(class="sort__view-item sort__view-"+item data-view=item)
											a(href="#").sort__view-link
												.sort__view-icon
					.products
						ul.products__list
							- each i in [1,2,3,4,5,6,7,8,9]
								li.products__item
									.products__item-inner
										.products__left
											.products__slideshow
												.products__slideshow-block
													a(href="#").products__slideshow-display
														img(src="img/products/galaxy.png" alt="galaxy").products__slideshow-img
													ul.products__slideshow-thumbs
														li.products__slideshow-item
															a(href="#").products__slideshow-link
																img(src="img/products/galaxy.png" alt="thumb").products__slideshow-thumb-img
														li.products__slideshow-item
															a(href="#").products__slideshow-link
																img(src="img/products/galaxy_s3_2.png" alt="thumb").products__slideshow-thumb-img
														li.products__slideshow-item
															a(href="#").products__slideshow-link
																img(src="img/products/galaxy_s3_3.png" alt="thumb").products__slideshow-thumb-img
												.products__article
													.products__article-word Артикул
													.products__article-num 123456
											.products__desc
												.products__desc-title Samsung GT-I9301I Galaxy S 3
												.products__desc_text
													| Смартфон Samsung GT-I9301I GALAXY S 3 Ceramic White Моноблок, Micro-SIM, Android 4.4, 3G, Bluetooth 4.0, EDGE, GPRS, WAP, Wi-Fi, Количество ядер процессора 4, Частота процессора 1400 МГц
												ul.products__desc-options
													- var options = {"Тип SIM-карты": "Micro-SIM","Количество SIM-карт":"1","Цвет":"Белый","ОC":"Android","Связь 3G":"Есть","4G (LTE)" :"Нет","GPS-модуль":"Есть"}
													- var index = 0;
													- for (item in options)
														li(class="products__option-item" + ((++index)%2?" products__option-item-colored":""))
															.products__option-key=item
															.products__option-value=options[item]
												div(class="products__rating" data-rating="3")
										.products__right
											.products__info
												.products__price 11 290
													i.rub
											.products__info-bottom
												a(href="#").products__buy-btn В корзину
												.products__availability
													| В наличии
						.pagination
							ul.pagination__list
								li.pagination__item.pagination__item-prev
									a(href="#").pagination__link
										.pagination__mark
								- each i in [1,2,3,4]
									li.pagination__item.pagination__item-prev
										a(href="#").pagination__link
											.pagination__mark=i

								li.pagination__item.pagination__item-next
									a(href="#").pagination__link
										.pagination__mark

